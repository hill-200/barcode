<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp"
        android:id="@+id/cardView_create"
        android:layout_marginBottom="5dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/history_create_imageView"
            android:src="@drawable/wifi"

            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/history"
        android:layout_toEndOf="@+id/cardView_create"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/history_name_textview"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/history"
        android:layout_toEndOf="@+id/cardView_create"
       android:layout_marginLeft="5dp"
        android:textColor="@color/gray"
        android:textStyle="normal"
        android:id="@+id/history_type_textview"
        android:layout_below="@+id/history_name_textview"
        />

    <ImageButton
        android:id="@+id/history_create_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/white"
        android:minHeight="48dp"
        android:src="@drawable/baseline_delete_sweep"
        tools:ignore="SpeakableTextPresentCheck" />




</RelativeLayout>